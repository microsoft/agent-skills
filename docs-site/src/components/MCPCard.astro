---
interface Props {
  emoji: string;
  name: string;
  description: string;
  category: 'documentation' | 'development' | 'utilities';
  url?: string | null;
}

const { emoji, name, description, category, url } = Astro.props;

const categoryColors = {
  documentation: {
    bg: 'rgba(59, 130, 246, 0.12)',
    color: '#60a5fa',
    border: 'rgba(59, 130, 246, 0.25)'
  },
  development: {
    bg: 'rgba(34, 197, 94, 0.12)',
    color: '#4ade80',
    border: 'rgba(34, 197, 94, 0.25)'
  },
  utilities: {
    bg: 'rgba(168, 85, 247, 0.12)',
    color: '#c084fc',
    border: 'rgba(168, 85, 247, 0.25)'
  }
};

const colors = categoryColors[category];
---

<div class="mcp-card">
  <div class="mcp-card-header">
    <span class="mcp-emoji">{emoji}</span>
    <div class="mcp-title-row">
      <h3 class="mcp-name">{name}</h3>
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" class="mcp-link" aria-label={`Visit ${name}`}>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
            <polyline points="15 3 21 3 21 9" />
            <line x1="10" y1="14" x2="21" y2="3" />
          </svg>
        </a>
      )}
    </div>
  </div>
  <p class="mcp-description">{description}</p>
  <span 
    class="mcp-badge"
    style={`background: ${colors.bg}; color: ${colors.color}; border: 1px solid ${colors.border};`}
  >
    {category}
  </span>
</div>

<style>
  .mcp-card {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    transition: all var(--transition-base);
  }

  .mcp-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(249, 115, 22, 0.1);
  }

  .mcp-card-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }

  .mcp-emoji {
    font-size: 2rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .mcp-title-row {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex: 1;
    min-width: 0;
  }

  .mcp-name {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .mcp-link {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: color var(--transition-fast);
    flex-shrink: 0;
  }

  .mcp-link:hover {
    color: var(--accent);
  }

  .mcp-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
    flex: 1;
  }

  .mcp-badge {
    display: inline-flex;
    align-self: flex-start;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--text-xs);
    font-weight: 500;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
