---
import Layout from '../layouts/Layout.astro';
import { SkillsSection } from '../components/SkillsSection';
import AgentCard from '../components/AgentCard.astro';
import MCPCard from '../components/MCPCard.astro';
import skills from '../data/skills.json';
import agents from '../data/agents.json';
import mcpServers from '../data/mcp-servers.json';
---

<Layout>
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">Agent Skills</h1>
        <p class="hero-subtitle">
          Domain knowledge for AI coding agents working with Azure SDKs and Microsoft Foundry.
        </p>
        
        <!-- Quick Start + GitHub -->
        <div class="hero-actions">
          <div class="code-block">
            <span class="code-prompt">$</span>
            <code id="install-command">npx skills add microsoft/skills</code>
            <button class="copy-btn" id="copy-btn" title="Copy to clipboard" aria-label="Copy install command">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1" />
              </svg>
            </button>
          </div>
          
          <a href="https://github.com/microsoft/skills" target="_blank" rel="noopener" class="github-star-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span>Star on GitHub</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Skills Section with Filters -->
    <SkillsSection client:load skills={skills} />

    <!-- Agents Section -->
    <section id="agents" class="section">
      <h2 class="section-title">
        <span class="section-dot"></span>
        Agents
      </h2>
      <div class="agents-grid">
        {agents.map((agent) => (
          <AgentCard
            emoji={agent.emoji}
            name={agent.name}
            description={agent.description}
            skills={agent.skills}
            file={agent.file}
          />
        ))}
      </div>
    </section>

    <!-- MCP Servers Section -->
    <section id="mcp-servers" class="section">
      <h2 class="section-title">
        <span class="section-dot"></span>
        MCP Servers
      </h2>
      <div class="mcp-grid">
        {mcpServers.map((server) => (
          <MCPCard
            emoji={server.emoji}
            name={server.name}
            description={server.description}
            category={server.category}
            url={server.url}
          />
        ))}
      </div>
    </section>

    <!-- Documentation Section -->
    <section id="documentation" class="section">
      <h2 class="section-title">
        <span class="section-dot"></span>
        Documentation
      </h2>
      <div class="docs-grid">
        <!-- llms.txt -->
        <a href="./llms.txt" class="doc-card">
          <span class="doc-icon">üìÑ</span>
          <div class="doc-content">
            <h3 class="doc-title">llms.txt</h3>
            <p class="doc-desc">LLM-friendly documentation index</p>
            <span class="doc-secondary">
              Also available: <a href="./llms-full.txt" class="doc-link-inline" onclick="event.stopPropagation()">llms-full.txt</a>
            </span>
          </div>
        </a>

        <!-- Context7 -->
        <a href="https://context7.com/microsoft/skills?tab=skills" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">7Ô∏è‚É£</span>
          <div class="doc-content">
            <h3 class="doc-title">
              Browse on Context7
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Indexed documentation with semantic search</p>
          </div>
        </a>

        <!-- AGENTS.md -->
        <a href="https://github.com/microsoft/skills/blob/main/AGENTS.md" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">ü§ñ</span>
          <div class="doc-content">
            <h3 class="doc-title">
              AGENTS.md Template
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Configure agent behavior in your projects</p>
          </div>
        </a>

        <!-- Blog Post -->
        <a href="https://devblogs.microsoft.com/all-things-azure/context-driven-development-agent-skills-for-microsoft-foundry-and-azure/" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">üìù</span>
          <div class="doc-content">
            <h3 class="doc-title">
              Blog: Context-Driven Development
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Learn about Agent Skills for Microsoft Foundry</p>
          </div>
        </a>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Copy button functionality
  const copyBtn = document.getElementById('copy-btn');
  const installCommand = document.getElementById('install-command');
  
  copyBtn?.addEventListener('click', async () => {
    const text = installCommand?.textContent || '';
    try {
      await navigator.clipboard.writeText(text);
      copyBtn.innerHTML = `
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2">
          <polyline points="20 6 9 17 4 12" />
        </svg>
      `;
      setTimeout(() => {
        copyBtn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
            <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1" />
          </svg>
        `;
      }, 2000);
    } catch (e) {
      console.error('Failed to copy:', e);
    }
  });
</script>

<style>
  /* Section styles */
  .section {
    padding: var(--space-2xl) 0;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-xl);
  }

  .section-dot {
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
  }

  /* Agents grid */
  .agents-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 1024px) {
    .agents-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .agents-grid {
      grid-template-columns: 1fr;
    }
  }

  /* MCP Servers grid */
  .mcp-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 1200px) {
    .mcp-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .mcp-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .mcp-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Hero Section - Compact, developer-focused, Foundry-inspired */
  .hero {
    padding: var(--space-2xl) 0 var(--space-xl);
    text-align: center;
  }
  
  .hero-content {
    max-width: 640px;
    margin: 0 auto;
  }
  
  .hero-title {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }
  
  .hero-subtitle {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-lg);
    max-width: 520px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Hero Actions - Command + GitHub button */
  .hero-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }
  
  .code-block {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-md);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }
  
  .code-prompt {
    color: var(--text-muted);
    user-select: none;
  }
  
  .code-block code {
    color: var(--text-primary);
  }
  
  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xs);
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }
  
  .copy-btn:hover {
    color: var(--text-primary);
    background: var(--bg-tertiary);
  }
  
  /* GitHub Star Button - Foundry accent CTA */
  .github-star-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: linear-gradient(135deg, #8251EE 0%, #5B8DEF 100%);
    color: #fff;
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
    box-shadow: 0 0 16px rgba(130, 81, 238, 0.35);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .github-star-btn:hover {
    background: linear-gradient(135deg, #9366F5 0%, #6B9DF5 100%);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 0 24px rgba(130, 81, 238, 0.5), 0 4px 16px rgba(0, 0, 0, 0.3);
  }
  
  .github-star-btn svg {
    flex-shrink: 0;
  }
  
  @media (max-width: 600px) {
    .hero {
      padding: var(--space-xl) 0 var(--space-lg);
    }
    
    .hero-content {
      padding: 0 var(--space-sm);
    }
    
    .hero-title {
      font-size: 1.75rem;
    }
    
    .hero-subtitle {
      font-size: var(--text-sm);
      line-height: 1.6;
      max-width: 100%;
    }
    
    .hero-actions {
      width: 100%;
      gap: var(--space-sm);
    }
    
    .code-block {
      width: 100%;
      max-width: 100%;
      font-size: var(--text-xs);
      padding: var(--space-sm);
      justify-content: space-between;
      overflow-x: auto;
    }
    
    .code-block code {
      word-break: break-all;
      white-space: nowrap;
    }
    
    .github-star-btn {
      width: 100%;
      justify-content: center;
      padding: var(--space-md) var(--space-lg);
      font-size: var(--text-base);
    }
  }

  /* Documentation Section */
  .docs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 768px) {
    .docs-grid {
      grid-template-columns: 1fr;
    }
  }

  .doc-card {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .doc-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-hover);
    box-shadow: 0 0 24px var(--accent-glow);
    transform: translateY(-2px);
  }

  .doc-icon {
    font-size: var(--text-2xl);
    flex-shrink: 0;
    line-height: 1;
  }

  .doc-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: 0;
  }

  .doc-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .doc-desc {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .doc-secondary {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    margin-top: var(--space-xs);
  }

  .doc-link-inline {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .doc-link-inline:hover {
    color: var(--accent-hover);
  }

  .external-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    opacity: 0.6;
  }

  .doc-card:hover .external-icon {
    opacity: 1;
  }
</style>
